@model IEnumerable<PerroAventurero.Models.Evento>

@section Styles{
    <link rel="stylesheet" href="~/css/indexUser.css" />
}

@{
    ViewData["Title"] = "Home Page";
}

<div class="header">
    <div class="w-container">
        <h1 class="main-heading">perro aventurero</h1>
        <div class="divider"></div>
        <div class="main-subtitle">&quot;PERRO AVENTURERO...compartiendo  una vida de aventuras con nuestros mejores amigos!&quot;</div>
    </div>
</div>
<div class="about-section">
    <img src="~/images/x-icon.png" width="52" alt="" class="x-icon" />
    <h2 class="heading-2">¿Quienes somos?</h2>
    <div class="w-container">
        <p class="about-text">
            En Perro Aventurero fomentamos un estilo de vida amigable y responsable con nuestras mascotas, estrechando el vinculo humano-animal
            con AVENTURAS donde nuestros perros juegan, corren, olfatean, nadan, en fin...donde ellos son REALMENTE PERROS!
        </p>
    </div>
</div>
<div id="eventos" class="section">
    <div class="container">
        <h2 class="heading-12">Eventos disponibles</h2>
        <div class="divider grey"></div>
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                if (item.Fecha > DateTime.Now)
                {
                    <div class="col-4" style="padding: 10px;">
                        <div class="project-wrapper">
                            <a class="project-wrapper inline-block">
                                @if (item.Imagen == null)
                                {
                                    <img src="~/images/3.png" width="211" height="180" alt="">
                                }
                                else
                                {
                                    <img src="@Url.Action("getImage", "Eventoes", new { id = item.CodigoEvento })" width="211" height="180" alt="">
                                }
                                <div class="event-info">
                                    <h3 class="heading-13">@Html.DisplayFor(modelItem => item.NombreEvento)</h3>
                                    <p class="paragraph">
                                        Lugar: @Html.DisplayFor(modelItem => item.Lugar)<br /><br />Fecha: @Html.DisplayFor(modelItem => item.Fecha)<br /><br />
                                        Precio General: @Html.DisplayFor(modelItem => item.PrecioGeneral)<br /><br />Precio Niños: @Html.DisplayFor(modelItem => item.PrecioNinno)
                                    </p>
                                </div>
                            </a>
                            <div class="row">
                                <div class="col-5">
                                    <a asp-controller="Reservas" asp-action="Create" asp-route-id="@item.CodigoEvento" class="btn btn-dark">Reservar</a>
                                </div>
                                <div class="col-7">
                                    <a asp-controller="ComprobantePagoReserva" asp-action="Index" asp-route-id="@item.CodigoEvento" class="btn btn-dark">Enviar Comprobante</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
