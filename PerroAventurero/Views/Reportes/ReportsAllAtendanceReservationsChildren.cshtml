@model PerroAventurero.Models.Reports


@{
    ViewData["Title"] = "Create";
}

<div>
    <h4>Reportes</h4>

    <script type="text/javaScript" src="~/js/reportsdatetime.js"></script>
</div>

<hr />

<form asp-action="RenderMenu">

    <div class="m-0 row justify-content-md-center">
        <select id="report" name="selectReport" class="form-control"
                asp-items="@(new SelectList(ViewBag.Reports))">
        </select>
    </div>


    <div id="start" style="display : none">
        <label for="start">Fecha de inicio:</label>

        <input type="date" id="start" name="start"
               min="2021-01-01">
    </div>


    <div id="final" style="display : none">
        <label for="start">Fecha de final:</label>

        <input type="date" id="start" name="final"
               min="2021-01-01">
    </div>


    <div class="form-group">
        <input type="submit" value="Generar reporte" class="btn btn-primary" />
    </div>

</form>

<hr />

<div>
    <hr />


    @* Reportes de comparacion de asistencia y reservaciones de niños *@
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.reservas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.reservas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.asistencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.asistencia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.porcentaje)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.porcentaje)
        </dd>
    </dl>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}