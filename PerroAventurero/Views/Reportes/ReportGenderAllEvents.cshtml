@model PerroAventurero.Models.Reports


@{
}

<div>
    <h4>Reportes</h4>
    <script type="text/javaScript" src="~/js/reportsdatetime.js"></script>


</div>

<hr />

<form asp-action="RenderMenu">

    <div class="m-0 row justify-content-md-center">
        <select id="report" onchange="rangeDatetime()" name="selectReport" class="form-control"
                asp-items="@(new SelectList(ViewBag.Reports))">
        </select>
    </div>


    <div id="start" style="display : block">
        <label for="start">Fecha de inicio:</label>

        <input type="date" id="start" name="start"
               min="2021-01-01">
    </div>


    <div id="final" style="display : block">
        <label for="start">Fecha de final:</label>

        <input type="date" id="start" name="final"
               min="2021-01-01">
    </div>


    <div class="form-group">
        <input type="submit" value="Generar reporte" class="btn btn-primary" />
    </div>

</form>

<hr />

<div>
    <hr />



    @*reporte de comparacion entre asistentes y reservaciones de todos los eventos *@
<h1 id="reportName">Comparación entre géneros de asistencia de todos los eventos</h1>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.generoPromedioM)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.generoPromedioM)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.generoPromedioF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.generoPromedioF)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.generoPromedioO)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.generoPromedioO)
        </dd>
    </dl>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



}
