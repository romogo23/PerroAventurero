@model IEnumerable<PerroAventurero.Models.Afiliacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComprobantePago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsAceptada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CedulaClienteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CedulaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComprobantePago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsAceptada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CedulaClienteNavigation.CedulaCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CedulaNavigation.Cedula)
            </td>
            <td>
                <a asp-action="Accept" asp-route-id="@item.Codigo">Aceptar</a> |
                <a asp-action="Reject" asp-route-id="@item.Codigo">Rechazar</a>
            </td>
        </tr>
}
    </tbody>
</table>
