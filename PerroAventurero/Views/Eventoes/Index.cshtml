                                    <input class="button-empresa" type="submit" onclick="return confirm('¿Está seguro que desea eliminar la empresa:  @item.NombreEmpresa')" value="Eliminar" />
                                </form>
                            </div>
                        </div>*@
                </div>
            </div>
        }
    </div>
</div>