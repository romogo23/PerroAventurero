@*VER COMO ACOMODARLOS*@

<div class="header">
    <div class="w-container">
        <h1 class="main-heading">Eventos</h1>
        <div class="divider"></div>
    </div>
</div>




<div class="section-event container">
    <div class="container">
        <div class="row">
            <div class="col-10">
                <h1>Lista de eventos:</h1>
            </div>
            <div class="col-2 justify-content-right">
                <a asp-action="Create"><h5>+Nuevo Evento</h5></a>
            </div>
        </div>
    </div>
    <div class="container p-2">
        @using (Html.BeginForm())
        {
            <p>
                Buscar Evento: @Html.TextBox("SearchString")
                <input type="submit" class="btn btn-dark" value="Buscar" />
            </p>
        }
    </div>
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="empresa-section col-3">
                <div class="container justify-content-center">
                    <h4 class="name"><a class="nameLink" asp-action="Edit" asp-route-id="@item.CodigoEvento">@Html.DisplayFor(modelItem => item.NombreEvento)</a></h4>
                    @if (item.Imagen == null)
                    {
                        <img class="imgLogo" src="~/images/3.png" width="211" height="180" alt="">
                    }
                    else
                    {
                        <img class="imgLogo" width="211" height="180" src="@Url.Action("getImage", "Eventoes", new { id = item.CodigoEvento })" />
                    }
                    <br />
                    <p class="pEvent">Fecha: @Html.DisplayFor(modelItem => item.Fecha)</p>
                    <p class="pEvent">Lugar: @Html.DisplayFor(modelItem => item.Lugar)</p>

                    @*<div class="row justify-content-center">
                            <div class="col-6 justify-content-center">
                                <a class="button-empresa" >Detalles</a>
                            </div>

                            <div class="col-6 justify-content-center">
