
@{
    ViewData["Title"] = "ModifyPassword";
}

<h1>Modify Password</h1>

<p>
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Validar Correo
    </button>
</p>
<div class="container">
    <div class="row">
        <div class="col-md-4 collapse" id="collapseExample">
            
            <form asp-action="SendCode">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Correo</label>
                    <input name="Correo" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-controller="Auth" asp-action="SendCode" type="submit" value="Enviar Código" class="btn btn-primary" data-toggle="collapse" data-target="#collapseExample1, #collapseExample" aria-expanded="false" aria-controls="collapseExample1, collapseExample" />
                </div>
            </form>
        </div>
        <div class="col-md-4 collapse" id="collapseExample1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Codigo</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" data-toggle="collapse" data-target="#collapseExample1" aria-expanded="false" aria-controls="collapseExample1" />
            </div>
        </div>
    </div>
</div>